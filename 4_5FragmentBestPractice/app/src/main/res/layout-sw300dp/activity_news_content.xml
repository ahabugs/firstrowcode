<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/news_tittle_frag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:name="activity.example.com.a4_5fragmentbestpractice.NewsTittleFrag"/>

    <FrameLayout
        android:id="@+id/news_content_frame_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <fragment
            android:id="@+id/news_content_frag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="activity.example.com.a4_5fragmentbestpractice.NewsContentFrag"/>

    </FrameLayout>

</LinearLayout>