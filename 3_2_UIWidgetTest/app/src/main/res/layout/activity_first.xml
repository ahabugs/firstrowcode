<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_view_top_Left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is TextView"
        android:textSize="24sp"
        android:textColor="#00ff00"/>

    <TextView
        android:id="@+id/text_view_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This is gravity Center"
        />
    <Button
        android:id="@+id/button_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Button EditText"/>
    <Button
        android:id="@+id/button_ImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Button ImageView"/>
    <Button
        android:id="@+id/button_ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viewable/Gone" />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"/>
    <Button
        android:id="@+id/button_PROBar_Inc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Increasing" />
    <Button
        android:id="@+id/button_SecondActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="SecondActivity" />
    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type something here"
        android:maxLines="2"/>
    <ImageView
        android:id="@+id/image_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img4"
        />

</LinearLayout>
