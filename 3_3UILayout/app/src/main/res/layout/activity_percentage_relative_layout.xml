<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/button_PercentageRelative1"
        android:text="PercentRelative1"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="20%"
        />

    <Button
        android:id="@+id/button_PercentageRelative2"
        android:text="PercentRelative2"
        android:textAllCaps="false"
        android:layout_above="@id/button_PercentageRelative1"
        android:layout_toRightOf="@id/button_PercentageRelative1"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="20%"
        />
    <Button
        android:id="@+id/button_PercentageRelative3"
        android:text="PercentRelative3"
        android:layout_above="@id/button_PercentageRelative1"
        android:layout_toLeftOf="@id/button_PercentageRelative1"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="20%"
        />
    <Button
        android:id="@+id/button_PercentageRelative4"
        android:text="PercentRelative4"
        android:textAllCaps="false"
        android:layout_below="@id/button_PercentageRelative1"
        android:layout_toLeftOf="@id/button_PercentageRelative1"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="30%"
        />
    <Button
        android:id="@+id/button_PercentageRelative5"
        android:text="PercentRelative4"
        android:textAllCaps="false"
        android:layout_below="@id/button_PercentageRelative1"
        android:layout_toRightOf="@id/button_PercentageRelative1"
        app:layout_widthPercent="40%"
        app:layout_heightPercent="20%"
        />

</android.support.percent.PercentRelativeLayout>
