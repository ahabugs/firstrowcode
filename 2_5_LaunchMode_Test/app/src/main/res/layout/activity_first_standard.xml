<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <Button
        android:id="@+id/button_standard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standard Launch Mode" />
    <Button
        android:id="@+id/button_singletop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleTop Launch Mode" />
    <Button
        android:id="@+id/button_singleTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleTask Launch Mode" />
    <Button
        android:id="@+id/button_SingleInstance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="singleInstance Launch Mode" />
</LinearLayout>
