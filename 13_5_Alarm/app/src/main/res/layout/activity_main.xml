<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.a13_5_alarm.MainActivity">


    <Button
        android:id="@+id/button_bind_ser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bind service"/>

    <Button
        android:id="@+id/button_unbind_ser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbind service"/>

    <Button
        android:id="@+id/button_start_ser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start service"/>
    <Button
        android:id="@+id/button_stop_ser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop service"/>


    <Button
        android:id="@+id/button_unbind_stop_ser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop unbind service"/>

</LinearLayout>
